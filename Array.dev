#include <stdio.h>

//tương tự như câu 3 nhưng sau phần tử cuối cùng không có ":"

int main() {
    int n, i;
    printf("Enter 5 values: ");
    scanf("%d", &n);
    
    int a[n];
    for (int i = 0; i < n; i++){
        printf("a[%d]= ", i);
        scanf("%d", &a[i]);
    }
    printf("In cac so chan:\n ");
    for(i = 0; i < n - 2; i++) {
        if(a[i] % 2 == 0)
           printf("%d: ", a[i]);
    }
    printf("%d", a[i]);
    
    printf("\nOutput\n");
    for (int i = 0; i < n; i++){
        printf("%d: ", a[i]); 
    }
  return 0;
}

